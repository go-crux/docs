{
  "$schema": "https://mintlify.com/docs.json",

  "theme": "mint",

  "name": "Crux",

  "colors": {
    "primary": "#57aaf6",
    "light": "#57aaf6",
    "dark": "#57aaf6"
  },

  "favicon": "/favicon.png",

  "navigation": {
    "tabs": [
      {
        "tab": "Overview",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "overview/what-is-crux",
              "overview/getting-started"
            ]
          },
          {
            "group": "Platform Details",
            "pages": [
              "overview/faqs",
              "overview/customisation",
              "overview/ongoing-support"
            ]
          }
        ]
      },
      {
        "tab": "Dashboard Suite",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart"
            ]
          },

          {
            "group": "Health Metrics",
             "pages": [
                "health-metrics/overview",
                "health-metrics/indicators",
                "health-metrics/score",
                "health-metrics/definitions",
                "health-metrics/FAQs"
              ]
            },

          {
            "group": "Dashboard Reports",
            "pages": [
              "dashboard-reports/orders",
              "dashboard-reports/customer_deep_dive",
              "dashboard-reports/daily_kpi_performance",
              "dashboard-reports/channel_performance",
              {
                "group": "Paid Media",
                "pages": [
                  "dashboard-reports/meta_performance",
                  "dashboard-reports/paid_search_performance"
                 
                ]
              },
              "dashboard-reports/influencer_performance",
               "dashboard-reports/ltv_retention"
            ]
          }
        ]
      }

    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },

  "logo": {
    "light": "/logo/logo_light.png",
    "dark": "/logo/logo_light.png"
  },

  "appearance": {
    "default": "light"
  },

  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@gocrux.io"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },

  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude"
   ]
  },

  "footer": {
    "socials": {
      "x": "https://x.com/mintlify",
      "github": "https://github.com/mintlify",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  }
}
